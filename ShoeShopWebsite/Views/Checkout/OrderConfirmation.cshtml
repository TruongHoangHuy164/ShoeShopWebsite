@model ShoeShopWebsite.Models.Order
@{
    ViewData["Title"] = "Xác nhận đơn hàng - ShoeShopWebsite";
}

<div class="container mt-5">
    @if (Model == null)
    {
        <h2 class="mb-4">Không tìm thấy đơn hàng</h2>
        <div class="alert alert-danger">
            Đơn hàng không tồn tại hoặc bạn không có quyền xem đơn hàng này.
        </div>
        <div class="text-end">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Quay lại trang chủ</a>
        </div>
    }
    else
    {
        // Xác định bước hiện tại và màu sắc dựa trên trạng thái đơn hàng
        var currentStep = 0;
        var statusColor = "#ddd"; // Mặc định
        switch (Model.Status.ToLower())
        {
            case "pending":
                currentStep = 1;
                statusColor = "#FF9800"; // Cam
                break;
            case "confirmed":
                currentStep = 2;
                statusColor = "#2196F3"; // Xanh dương
                break;
            case "delivering":
                currentStep = 3;
                statusColor = "#9C27B0"; // Tím
                break;
            case "completed":
                currentStep = 4;
                statusColor = "#4CAF50"; // Xanh lá
                break;
            case "failed":
                currentStep = 0;
                statusColor = "#F44336"; // Đỏ
                break;
        }

        <h2 class="mb-4">Đơn hàng của bạn đã được đặt thành công!</h2>
        <div class="alert alert-success">
            Cảm ơn bạn đã mua sắm tại ShoeShopWebsite. Đơn hàng của bạn đang được xử lý.
        </div>

        <!-- Hiển thị thông báo từ TempData -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <!-- Thanh tiến độ -->
        <div class="progress-tracker mb-4" style="--status-color: @statusColor;">
            <div class="step @(currentStep >= 1 ? "active" : "")">
                <span class="step-circle"></span>
                <span class="step-label">Chờ xác nhận</span>
            </div>
            <div class="step @(currentStep >= 2 ? "active" : "")">
                <span class="step-circle"></span>
                <span class="step-label">Đã xác nhận</span>
            </div>
            <div class="step @(currentStep >= 3 ? "active" : "")">
                <span class="step-circle"></span>
                <span class="step-label">Đang giao</span>
            </div>
            <div class="step @(currentStep >= 4 ? "active" : "")">
                <span class="step-circle"></span>
                <span class="step-label">Hoàn thành</span>
            </div>
        </div>
        @if (Model.Status.ToLower() == "failed")
        {
            <div class="failed-text mb-4">Đơn hàng thất bại</div>
        }

        <h4>Thông tin đơn hàng #@Model.OrderID</h4>
        <div class="info-card">
            <ul class="list-unstyled">
                <li><strong>Ngày đặt hàng:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</li>
                <li><strong>Tên người nhận:</strong> @Model.FullName</li>
                <li><strong>Địa chỉ giao hàng:</strong> @Model.Address</li>
                <li><strong>Số điện thoại:</strong> @Model.PhoneNumber</li>
                <li><strong>Phương thức thanh toán:</strong> @Model.PaymentMethod</li>
                @if (!string.IsNullOrEmpty(Model.Note))
                {
                    <li><strong>Ghi chú:</strong> @Model.Note</li>
                }
                <li>
                    <strong>Trạng thái:</strong>
                    <span class="status @Model.Status.ToLower()">@Model.Status</span>
                </li>
            </ul>
        </div>

        <h4>Chi tiết đơn hàng</h4>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Sản phẩm</th>
                    <th>Kích cỡ</th>
                    <th>Màu sắc</th>
                    <th>Số lượng</th>
                    <th>Giá</th>
                    <th>Tổng</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.OrderDetails != null && Model.OrderDetails.Any())
                {
                    @foreach (var detail in Model.OrderDetails)
                    {
                        <tr>
                            <td>@(detail.Product?.ProductName ?? "Không xác định")</td>
                            <td>@(detail.Size?.SizeName ?? "Không xác định")</td>
                            <td>@(detail.Color?.ColorName ?? "Không xác định")</td>
                            <td>@detail.Quantity</td>
                            <td>@detail.Price.ToString("N0") đ</td>
                            <td>@((detail.Price * detail.Quantity).ToString("N0")) đ</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6">Không có sản phẩm trong đơn hàng.</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="5" class="text-end"><strong>Tổng cộng:</strong></td>
                    <td><strong>@Model.TotalPrice.ToString("N0") đ</strong></td>
                </tr>
            </tfoot>
        </table>

        <div class="text-end">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Tiếp tục mua sắm</a>
        </div>
    }
</div>

@section Styles {
    <style>
        .info-card {
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 8px;
            border: 1px solid #e0e0e0;
            margin-bottom: 20px;
        }

            .info-card ul {
                margin: 0;
            }

            .info-card li {
                font-size: 16px;
                margin-bottom: 10px;
                color: #666666;
            }

                .info-card li strong {
                    color: #333333;
                    font-weight: 600;
                    margin-right: 5px;
                }

        .status {
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 14px;
            font-weight: 500;
        }

            .status.pending {
                background-color: #FFF3E0;
                color: #FF9800;
            }

            .status.confirmed {
                background-color: #E3F2FD;
                color: #2196F3;
            }

            .status.delivering {
                background-color: #F3E5F5;
                color: #9C27B0;
            }

            .status.completed {
                background-color: #E8F5E9;
                color: #4CAF50;
            }

            .status.failed {
                background-color: #FFEBEE;
                color: #F44336;
            }

        .table th, .table td {
            vertical-align: middle;
        }

        .table th {
            background-color: #f5f5f5;
            color: #666666;
            font-weight: 600;
        }

        .alert-success {
            background-color: #E8F5E9;
            color: #4CAF50;
        }

        .alert-danger {
            background-color: #FFEBEE;
            color: #F44336;
        }

        /* CSS cho thanh tiến độ */
        .progress-tracker {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            position: relative;
            width: 100%;
            padding: 10px 0;
        }

        .step {
            flex: 1;
            text-align: center;
            position: relative;
            z-index: 1;
        }

        .step-circle {
            display: inline-block;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            background-color: #ddd;
            transition: background-color 0.3s;
        }

        .step.active .step-circle {
            background-color: var(--status-color); /* Sử dụng màu của trạng thái */
        }

        .step-label {
            display: block;
            font-size: 12px;
            color: #666;
            margin-top: 5px;
            white-space: nowrap;
        }

        .step.active .step-label {
            color: var(--status-color);
            font-weight: 500;
        }

        .progress-tracker::before {
            content: '';
            position: absolute;
            top: 18px;
            left: 10%;
            right: 10%;
            height: 2px;
            background-color: #ddd;
            z-index: 0;
        }

        .failed-text {
            text-align: center;
            color: #F44336;
            font-size: 14px;
            margin-bottom: 10px;
        }
    </style>
}