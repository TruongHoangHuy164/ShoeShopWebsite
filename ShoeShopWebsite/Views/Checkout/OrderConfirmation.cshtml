@model ShoeShopWebsite.Models.Order

@{
    ViewData["Title"] = "Hóa đơn - ShoeShopWebsite";
}

<div class="container mt-5">
    <h2 class="mb-4">Hóa đơn thanh toán</h2>

    <div class="card">
        <div class="card-header">
            <h4>Mã đơn hàng: #@Model.OrderID</h4>
            <p>Ngày đặt hàng: @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
            <p>
                Phương thức thanh toán:
                @switch (Model.PaymentMethod)
                {
                    case "Cash":
                        @: Thanh toán tiền mặt khi nhận hàng
                        break;
                    case "MoMo":
                        @: Thanh toán qua MoMo
                        break;
                    case "VNPay":
                        @: Thanh toán qua VNPay
                        break;
                    default:
                        @: Không xác định
                        break;
                }
            </p>
            <p>
                Trạng thái:
                @if (Model.Status == "Pending")
                {
                    <span class="badge bg-warning">Đang xử lý</span>
                }
                else if (Model.Status == "Completed")
                {
                    <span class="badge bg-success">Hoàn tất</span>
                }
                else
                {
                    <span class="badge bg-danger">Thất bại</span>
                }
            </p>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Hình ảnh</th>
                        <th>Sản phẩm</th>
                        <th>Kích thước</th>
                        <th>Màu sắc</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Tổng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var detail in Model.OrderDetails)
                    {
                        <tr>
                            <td>
                                <img src="@(detail.Product.ProductImages?.FirstOrDefault()?.ImageURL ?? "/images/no-image.png")"
                                     alt="@detail.Product.ProductName"
                                     style="width: 50px; height: 50px; object-fit: cover;" />
                            </td>
                            <td>@detail.Product.ProductName</td>
                            <td>@detail.Size.SizeName</td>
                            <td>@(detail.Color?.ColorName ?? "Không có màu")</td>
                            <td>@detail.Price.ToString("N0") đ</td>
                            <td>@detail.Quantity</td>
                            <td>@((detail.Price * detail.Quantity).ToString("N0")) đ</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="6" class="text-end"><strong>Tổng cộng:</strong></td>
                        <td><strong>@Model.TotalPrice.ToString("N0") đ</strong></td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="card-footer text-end">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Quay về trang chủ</a>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
}