@model ShoeShopWebsite.Models.Order

@{
    ViewData["Title"] = "Xác nhận đơn hàng - ShoeShopWebsite";
}

<div class="container mt-5">
    <h2 class="mb-4">Đơn hàng của bạn đã được đặt thành công!</h2>
    <div class="alert alert-success">
        Cảm ơn bạn đã mua sắm tại ShoeShopWebsite. Đơn hàng của bạn đang được xử lý.
    </div>

    <h4>Thông tin đơn hàng #@Model.OrderID</h4>
    <p><strong>Ngày đặt hàng:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
    <p><strong>Tên người nhận:</strong> @Model.FullName</p>
    <p><strong>Địa chỉ giao hàng:</strong> @Model.Address</p>
    <p><strong>Số điện thoại:</strong> @Model.PhoneNumber</p>
    <p><strong>Phương thức thanh toán:</strong> @Model.PaymentMethod</p>
    @if (!string.IsNullOrEmpty(Model.Note))
    {
        <p><strong>Ghi chú:</strong> @Model.Note</p>
    }

    <h4>Chi tiết đơn hàng</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Giá</th>
                <th>Tổng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model.OrderDetails)
            {
                <tr>
                    <td>@detail.Product.ProductName (Size: @detail.Size.SizeName@(detail.Color != null ? ", Color: " + detail.Color.ColorName : ""))</td>
                    <td>@detail.Quantity</td>
                    <td>@detail.Price.ToString("N0") đ</td>
                    <td>@((detail.Price * detail.Quantity).ToString("N0")) đ</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-end"><strong>Tổng cộng:</strong></td>
                <td><strong>@Model.TotalPrice.ToString("N0") đ</strong></td>
            </tr>
        </tfoot>
    </table>

    <div class="text-end">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Tiếp tục mua sắm</a>
    </div>
</div>