@model List<ShoeShopWebsite.Models.Order>
@{
    ViewData["Title"] = "Danh sách đơn hàng - ShoeShopWebsite";
}

<div class="container mt-5">
    <h2 class="mb-4">Danh sách đơn hàng của bạn</h2>

    @if (Model.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Mã đơn hàng</th>
                    <th>Ngày đặt</th>
                    <th>Tổng tiền</th>
                    <th>Phương thức thanh toán</th>
                    <th>Trạng thái</th>
                    <th>Tiến độ</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    var progressPercentage = 0;
                    var progressColor = "#f0f0f0"; // Màu xám mặc định
                    switch (order.Status.ToLower())
                    {
                        case "pending":
                            progressPercentage = 25;
                            progressColor = "#4CAF50"; // Xanh lá
                            break;
                        case "confirmed":
                            progressPercentage = 50;
                            progressColor = "#4CAF50";
                            break;
                        case "delivering":
                            progressPercentage = 75;
                            progressColor = "#4CAF50";
                            break;
                        case "completed":
                            progressPercentage = 100;
                            progressColor = "#4CAF50";
                            break;
                        case "failed":
                            progressPercentage = 0;
                            progressColor = "#f0f0f0"; // Không màu (xám giống nền)
                            break;
                    }
                    <tr>
                        <td>#@order.OrderID</td>
                        <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@order.TotalPrice.ToString("N0") đ</td>
                        <td>@order.PaymentMethod</td>
                        <td><span class="status @order.Status.ToLower()">@order.Status</span></td>
                        <td>
                            <div class="progress-container">
                                <div class="progress-bar" style="width: @progressPercentage%; background-color: @progressColor;">
                                    <span class="progress-text">@progressPercentage%</span>
                                </div>
                            </div>
                        </td>
                        <td>
                            <a asp-action="OrderConfirmation" asp-route-orderId="@order.OrderID" class="btn btn-primary btn-sm">Xem chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            Bạn chưa có đơn hàng nào.
        </div>
    }

    <div class="text-end">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Tiếp tục mua sắm</a>
    </div>
</div>

@section Styles {
    <style>
        .container {
            max-width: 1200px;
        }

        .table th, .table td {
            vertical-align: middle;
            padding: 12px;
        }

        .table th {
            background-color: #f5f5f5;
            color: #666666;
            font-weight: 600;
        }

        .status {
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 14px;
            font-weight: 500;
        }

            .status.pending {
                background-color: #FFF3E0;
                color: #FF9800;
            }

            .status.confirmed {
                background-color: #E3F2FD;
                color: #2196F3;
            }

            .status.delivering {
                background-color: #F3E5F5;
                color: #9C27B0;
            }

            .status.completed {
                background-color: #E8F5E9;
                color: #4CAF50;
            }

            .status.failed {
                background-color: #FFEBEE;
                color: #F44336;
            }

        .btn-sm {
            padding: 5px 10px;
            font-size: 14px;
        }

        .alert-info {
            background-color: #E3F2FD;
            color: #2196F3;
        }

        .progress-container {
            width: 100%;
            height: 20px;
            background-color: #f0f0f0;
            border-radius: 10px;
            overflow: hidden;
            position: relative;
        }

        .progress-bar {
            height: 100%;
            transition: width 0.3s ease-in-out;
            position: relative;
            min-width: 30px;
        }

        .progress-text {
            position: absolute;
            right: 5px;
            top: 50%;
            transform: translateY(-50%);
            color: white;
            font-size: 12px;
            font-weight: 500;
        }
    </style>
}