@model IEnumerable<ShoeShopWebsite.Models.Size>

@{
    ViewData["Title"] = "Sizes";
}

<h1>Sizes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.SizeID)</th>
            <th>@Html.DisplayNameFor(model => model.SizeName)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.SizeID)</td>
                <td>@Html.DisplayFor(modelItem => item.SizeName)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SizeID" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.SizeID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>