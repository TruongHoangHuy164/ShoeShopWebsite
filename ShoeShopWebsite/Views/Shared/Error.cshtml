@model ErrorViewModel
@{
    ViewData["Title"] = "Lỗi - ShoeShopWebsite";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4">Đã xảy ra lỗi</h2>
    <div class="alert alert-danger">
        <strong>Lỗi:</strong> @Model.Message
    </div>
    <div class="text-end">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Quay lại trang chủ</a>
        <a asp-controller="Product" asp-action="MyOrders" class="btn btn-secondary">Quay lại đơn hàng</a>
    </div>
</div>

@section Styles {
    <style>
        .container {
            max-width: 800px;
        }

        .alert {
            padding: 15px;
            border-radius: 5px;
        }

        .btn {
            margin-left: 10px;
        }
    </style>
}