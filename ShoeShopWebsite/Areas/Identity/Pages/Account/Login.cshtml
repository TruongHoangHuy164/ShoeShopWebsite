@page
@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null;
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" />
<link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />

<div class="container">
    <!-- Login Form -->
    <div class="form-box">
        <form id="account" method="post" autocomplete="off">
            <h1>Đăng nhập</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="input-box">
                <input asp-for="Input.Email" class="form-control" autocomplete="off" aria-required="true" placeholder="Hoặc đăng nhập bằng" />
                <i class="bx bxs-envelope"></i>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="input-box">
                <input asp-for="Input.Password" class="form-control" autocomplete="off" aria-required="true" placeholder="Mật khẩu" />
                <i class="bx bxs-lock-alt"></i>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="forgot-link">
                <a asp-page="./ForgotPassword">Quên mật khẩu?</a>
            </div>
            <button id="login-submit" type="submit" class="btn btn-primary">Đăng nhập</button>
        </form>

        <!-- Form Google -->
        <div class="social-login">
            @if (Model.ExternalLogins?.Count > 0)
            {
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" autocomplete="off">
                    @foreach (var provider in Model.ExternalLogins)
                    {
                        if (provider.Name == "Google")
                        {
                            <button type="submit" name="provider" value="@provider.Name" class="social-btn google-btn">
                                <i class="bx bxl-google"></i> Đăng nhập với Google
                            </button>
                        }
                    }
                </form>
            }
        </div>
    </div>

    <!-- Toggle Panel -->
    <div class="toggle-box">
        <div class="toggle-panel toggle-left">
            <h1>Xin chào!</h1>
            <h4>Đăng Nhập Tại Đây</h4>
            <p>Chưa có tài khoản?</p>
            <div class="register-link">
                <a asp-page="./Register" class="btn register-btn">Đăng Ký</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Poppins', sans-serif;
    }

    .container {
        display: flex;
        min-height: 100vh;
        background: #fff;
    }

    .form-box {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 40px;
        background: #fff;
    }

        .form-box h1 {
            font-size: 36px;
            font-weight: 600;
            margin-bottom: 20px;
            color: #333;
        }

    .input-box {
        position: relative;
        margin-bottom: 20px;
    }

        .input-box input {
            width: 100%;
            padding: 12px 40px 12px 15px;
            font-size: 16px;
            border: none;
            border-radius: 25px;
            background: #f0f4f8;
            outline: none;
        }

        .input-box i {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 20px;
            color: #666;
        }

    .forgot-link {
        text-align: right;
        margin-bottom: 20px;
    }

        .forgot-link a {
            color: #666;
            text-decoration: none;
            font-size: 14px;
        }

            .forgot-link a:hover {
                text-decoration: underline;
            }

    .btn-primary {
        width: 100%;
        padding: 12px;
        background: #FF6F61;
        border: none;
        border-radius: 25px;
        color: #fff;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.3s;
    }

        .btn-primary:hover {
            background: #e65b50;
        }

    .social-login {
        margin-top: 20px;
        text-align: center;
    }

    .google-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        padding: 12px;
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 25px;
        color: #333;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.3s;
    }

        .google-btn i {
            margin-right: 8px;
            font-size: 20px;
            color: #4285f4;
        }

        .google-btn:hover {
            background: #f1f1f1;
        }

    .toggle-box {
        flex: 1;
        background: #F5C6A5;
        display: flex;
        justify-content: center;
        align-items: center;
        border-top-left-radius: 50px;
        border-bottom-left-radius: 50px;
    }

    .toggle-panel {
        text-align: center;
        color: #fff;
    }

        .toggle-panel h1 {
            font-size: 36px;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .toggle-panel h4 {
            font-size: 20px;
            font-weight: 400;
            margin-bottom: 20px;
        }

        .toggle-panel p {
            font-size: 16px;
            margin-bottom: 20px;
        }

    .register-btn {
        padding: 10px 30px;
        background: transparent;
        border: 2px solid #fff;
        border-radius: 25px;
        color: #fff;
        font-size: 16px;
        font-weight: 600;
        text-decoration: none;
        transition: background 0.3s;
    }

        .register-btn:hover {
            background: #fff;
            color: #F5C6A5;
        }
</style>